# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000

# Sentry Configuration (Error Tracking & Performance Monitoring)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_RELEASE=fixia-frontend@1.0.0
SENTRY_RELEASE=fixia-frontend@1.0.0
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=fixia-frontend
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Environment
NODE_ENV=development
NEXT_PUBLIC_NODE_ENV=development

# Google Maps Integration
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Payment Integration (MercadoPago)
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# Social Auth (if implemented)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Analytics (if implemented)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-facebook-pixel-id
NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=true
NEXT_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_GEOLOCATION=true
NEXT_PUBLIC_ENABLE_DARK_MODE=false
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_SOCIAL_AUTH=false

# Development/Testing
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# Performance & SEO
NEXT_PUBLIC_SITE_NAME=Fixia
NEXT_PUBLIC_SITE_DESCRIPTION=Plataforma de servicios profesionales en Chubut
NEXT_PUBLIC_SITE_URL=https://fixia.com.ar
NEXT_PUBLIC_SITE_IMAGE=https://fixia.com.ar/og-image.jpg

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL=contact@fixia.com.ar
NEXT_PUBLIC_SUPPORT_EMAIL=support@fixia.com.ar
NEXT_PUBLIC_PHONE=+54-280-XXX-XXXX

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/fixia.chubut
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/fixia.chubut
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/fixia_chubut
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/fixia

# App Store Links (if mobile apps exist)
NEXT_PUBLIC_ANDROID_APP_URL=https://play.google.com/store/apps/details?id=com.fixia.app
NEXT_PUBLIC_IOS_APP_URL=https://apps.apple.com/app/fixia/id123456789

# CDN Configuration (if using external CDN)
NEXT_PUBLIC_CDN_URL=https://cdn.fixia.com.ar
NEXT_PUBLIC_IMAGES_CDN=https://images.fixia.com.ar

# Real-time Features
NEXT_PUBLIC_SOCKET_URL=http://localhost:5000
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=true

# Location Services
NEXT_PUBLIC_DEFAULT_LATITUDE=-43.2481
NEXT_PUBLIC_DEFAULT_LONGITUDE=-65.3053
NEXT_PUBLIC_DEFAULT_CITY=Puerto Madryn
NEXT_PUBLIC_DEFAULT_PROVINCE=Chubut

# Subscription/Pricing
NEXT_PUBLIC_SHOW_PRICING=true
NEXT_PUBLIC_ENABLE_FREE_TRIAL=true
NEXT_PUBLIC_TRIAL_DAYS=14

# Legal & Compliance
NEXT_PUBLIC_PRIVACY_POLICY_URL=/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=/terms
NEXT_PUBLIC_COOKIE_POLICY_URL=/cookies

# Customer Support
NEXT_PUBLIC_SUPPORT_CHAT_ENABLED=false
NEXT_PUBLIC_INTERCOM_APP_ID=your-intercom-app-id
NEXT_PUBLIC_ZENDESK_KEY=your-zendesk-key

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true
NEXT_PUBLIC_WEB_VITALS_ATTRIBUTION=true