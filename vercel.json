{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://fixia-platform-production.up.railway.app"
  },
  "functions": {
    "frontend/src/pages/api/**/*.js": {
      "maxDuration": 30
    },
    "frontend/src/pages/api/**/*.ts": {
      "maxDuration": 30
    }
  }
}