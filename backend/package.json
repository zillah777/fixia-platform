{
  "name": "fixia-backend",
  "version": "1.0.0",
  "description": "Backend API for Fixia - Service marketplace platform",
  "main": "server.js",
  "scripts": {
    "start": "node server-production.js",
    "dev": "nodemon server-production.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:unit": "jest tests/unit --detectOpenHandles --forceExit",
    "test:integration": "jest tests/integration --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "migrate": "node scripts/migrate.js",
    "migrate-postgresql": "node scripts/migrate-postgresql.js",
    "migrate-extended": "node scripts/migrate-extended.js",
    "migrate-badges": "node scripts/badges-migration.js",
    "migrate-as-premium": "node scripts/migrate-as-premium.js",
    "migrate-categories": "node scripts/migrate-service-categories.js",
    "migrate-promotional": "node scripts/migrate-promotional-system.js",
    "migrate-explorer": "node scripts/migrate-explorer-system.js",
    "migrate-chat": "node scripts/migrate-chat-system.js",
    "migrate-mutual": "node scripts/migrate-mutual-confirmation.js",
    "migrate-notifications": "node scripts/migrate-notification-preferences.js",
    "seed": "node scripts/seed.js",
    "db:setup": "node scripts/migrate-postgresql.js",
    "db:reset": "node scripts/reset-db.js",
    "db:optimize": "node scripts/optimize-database.js",
    "db:optimize:dry": "node scripts/optimize-database.js --dry-run",
    "db:stats": "node scripts/optimize-database.js --stats",
    "verify-users": "node scripts/verify-existing-users.js",
    "build": "echo 'Build completed - migrations will run at startup'",
    "seenode:deploy": "echo 'Deploying to SeeNode...'",
    "seenode:health": "curl -f $SEENODE_URL/health || exit 1",
    "seenode:logs": "echo 'Check logs in SeeNode dashboard'",
    "seenode:migrate": "node scripts/migrate-postgresql.js",
    "seenode:optimize": "npm run db:optimize",
    "postinstall": "echo 'Fixia backend dependencies installed successfully'"
  },
  "keywords": [
    "fixia",
    "services",
    "marketplace",
    "api"
  ],
  "author": "Fixia Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.0",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^9.40.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "sharp": "^0.33.1",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "bull": "^4.12.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "axios": "^1.10.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
