# Fixia Backend TEST Environment Variables

# Server Configuration
NODE_ENV=test
PORT=5001

# Test Database Configuration (SQLite in-memory for tests)
DB_HOST=localhost
DB_PORT=5432
DB_USER=test_user
DB_PASSWORD=test_password
DB_NAME=fixia_test_db

# JWT Configuration for Testing
JWT_SECRET=test-jwt-secret-key-for-testing-only-do-not-use-in-production
JWT_EXPIRE=7d
JWT_ISSUER=fixia-api-test
JWT_AUDIENCE=fixia-app-test

# SendGrid Configuration - Disabled for tests
SENDGRID_API_KEY=SG.test-api-key-disabled-for-testing
SENDGRID_FROM_EMAIL=test@fixia.com.ar
SENDGRID_FROM_NAME=Fixia Test Environment

# Frontend URL for testing
FRONTEND_URL=http://localhost:3000

# MercadoPago Configuration - Test credentials
MP_ACCESS_TOKEN=test_mercadopago_access_token
MP_PUBLIC_KEY=test_mercadopago_public_key

# Google Maps API - Test key
GOOGLE_MAPS_API_KEY=test_google_maps_api_key

# Security - Relaxed for testing
RATE_LIMIT_WINDOW=60
RATE_LIMIT_MAX=1000
MAX_FILE_SIZE=1048576
UPLOAD_PATH=./test-uploads

# Redis Configuration - Disabled for unit tests
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Disable external services in tests
DISABLE_CACHE=true
DISABLE_EMAILS=true
DISABLE_ANALYTICS=true