# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/fixia_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fixia_db
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# JWT Configuration - MUST BE CHANGED IN PRODUCTION
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-256-bit-minimum
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production-256-bit-minimum
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d
JWT_ISSUER=fixia-api
JWT_AUDIENCE=fixia-app

# SendGrid Configuration - PRODUCTION READY
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=your-email@domain.com
SENDGRID_FROM_NAME=Fixia - Marketplace de Servicios
EMAIL_FROM=your-email@domain.com
REQUIRE_EMAIL_VERIFICATION=true

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Security Configuration
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=5
RATE_LIMIT_SENSITIVE_MAX=10
WEBHOOK_SECRET=your-webhook-secret-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production
COOKIE_SECRET=your-cookie-secret-change-this-in-production
ENABLE_SECURITY_HEADERS=true
ENABLE_ADVANCED_RATE_LIMITING=true

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=fixia-backend@1.0.0
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=fixia-backend
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SERVER_NAME=fixia-backend-dev

# Payment Integration (MercadoPago)
MERCADOPAGO_ACCESS_TOKEN=your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=your-mercadopago-public-key

# Social Auth (if implemented)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Maps API (if needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Webhook URLs
WEBHOOK_SECRET=your-webhook-secret
PAYMENT_WEBHOOK_URL=https://your-domain.com/api/webhooks/payments

# External Services
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Redis Configuration (for caching and session storage)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379
DISABLE_REDIS=false
ENABLE_REDIS_IN_TESTS=false

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PAYMENTS=true
ENABLE_CHAT=true
ENABLE_REVIEWS=true
ENABLE_NOTIFICATIONS=true

# Development/Testing
SKIP_EMAIL_VERIFICATION=false
MOCK_PAYMENTS=false
ENABLE_DEBUG_ROUTES=false